{
  "name": "bowling-companion-transfer",
  "version": "1.0.0",
  "author": "Joseph Roque",
  "license": "Apache-2.0",
  "description": "A web utility for users of the Android app 5 Pin Bowling Companion to transfer their data to a new device.",
  "private": true,
  "scripts": {
    "build": "babel src -d build -D",
    "forever": "./script/start",
    "stop": "./script/stop",
    "start:prod": "yarn build && node ./build/server.js >logs/out.log 2>logs/err.log",
    "start:dev": "yarn build && node ./build/server.js",
    "start": "npm run start:prod",
    "lint": "eslint ./src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "archiver": "^3.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-shopify": "16.6.0",
    "cron": "1.5.0",
    "dateformat": "^3.0.3",
    "express": "4.16.4",
    "forever": "^0.15.3",
    "formidable": "^1.2.1",
    "fs-extra": "^7.0.0",
    "mongodb": "3.1.8",
    "nodemon": "1.18.5",
    "pug": "^2.0.3",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "eslint": "5.8.0",
    "eslint-plugin-shopify": "26.1.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:shopify/esnext",
      "plugin:shopify/node"
    ],
    "env": {
      "jquery": true,
      "browser": true
    }
  },
  "babel": {
    "presets": [
      "shopify/node"
    ]
  }
}
